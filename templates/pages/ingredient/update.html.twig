{% extends "base.html.twig" %}
{% block title %} Recettes | Modifier Ingr√©dient {% endblock %}
{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-evenly">
            <div class="col-6">
                <h1>Editer un ingredient</h1>
                <form name="ingredient" method="post">
                    <div class="form-group">
                        {{ form_label(form.nom)}}
                        {{ form_widget(form.nom)}}
                        <div class="form-error">
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.prix)}}
                        {{ form_widget(form.prix)}}
                        <div class="form-error">
                            {{ form_errors(form.prix) }}
                        </div>
                    </div>
                    {{form_row(form._token)}}
                <button type="submit" id="ingredient_submit" name="ingredient[submit]" class="btn btn-primary mt-4">Modifier</button>
            </form>
            </div>
            <div class="col-6">
                {#  #}
            </div>
        </div>
    </div>
{% endblock %}