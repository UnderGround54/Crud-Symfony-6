{% block body %}
    <div class="container mt-4">
        <h1>Editer un ingredient</h1>
        <form name="ingredient" method="post">
            <div class="form-group">
                {{ form_label(form.nom)}}
                {{ form_widget(form.nom)}}
                <div class="form-error">
                    {{ form_errors(form.nom) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.prix)}}
                {{ form_widget(form.prix)}}
                <div class="form-error">
                    {{ form_errors(form.prix) }}
                </div>
            </div>
            {{form_row(form._token)}}
        <button type="submit" id="ingredient_submit" name="ingredient[submit]" class="btn btn-primary mt-4">Modifier</button>
    </form>
    </div>
{% endblock %}