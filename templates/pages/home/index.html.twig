{% extends 'base.html.twig' %}

{% block title %}Recettes | Home {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    

    <div class="row justify-content-evenly">
        <div class="col-9">
            <h1><i class="fa-light fa-house-user"></i> Bienvenue sur la dashboard</h1>
            <p> Lorem ipsum dolor sit amet consectetur adipisicing elit. Odio qui tempore doloribus, recusandae quo eaque laudantium, ut maxime voluptate dolore repudiandae porro necessitatibus ea soluta temporibus aliquam doloremque nobis laboriosam!</p>
            {% if app.user %}
                <a href="{{ path('login.deconnexion') }}" class="btn btn-primary"><i class="bi bi-door-open"></i> Se deconnecter</a>
            {% else %}
                <a href="{{ path('login.inscription') }}" class="btn btn-primary"><i class="bi bi-person-workspace"></i> S'inscrir</a>
            {% endif %}
        </div>
        <div class="col-3">
            <lottie-player
                autoplay
                loop
                speed="0.5"
                mode="normal"
                src="https://assets4.lottiefiles.com/packages/lf20_pkghem0h.json"
                style="width: 300px"
                >
            </lottie-player>
        </div>
    </div>
    <h4><i class="fa-light fa-pot-food"></i>Les trois dernière recette de la communauté </h4>
    <div class="d-flex justify-content-between">
        {% for recipe in recipes %}
        <a href="{{ path('recipe.show',{'id': recipe.id}) }}" style="text-decoration:none;">
        <div class="row">
            <div class="col-sm-12">
                <div class="card border-dark mb-3" style="max-width: 20rem;">
                    <div class="card-header">Recette n° {{ recipe.id }}</div>
                    <div class="card-body">
                        <h4 class="card-title">{{ recipe.nom }}</h4>
                        <p class="card-text">{{ recipe.description|slice(0, 40) ~ ' ...' }}</p>
                    </div>
                </div>
            </div>
        </div>
        </a>
        {% endfor %}
    </div>
    <a href="{{ path('recipe.public') }}" class="btn btn-primary mb-5"><i class="bi bi-receipt"></i> Toutes les recettes publique</a>
</div>
{% endblock %}
