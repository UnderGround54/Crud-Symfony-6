{% extends "base.html.twig" %}
{% block title %} Recettes | Modifier un Recette {% endblock %}
{% block body %}
    <div class="container">
        <h1 class="mt-4">
           Editer un Recette
        </h1>
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.nom)}}
                {{ form_widget(form.nom)}}
                <div class="form-error">
                    {{ form_errors(form.nom) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.nbPersonne)}}
                {{ form_widget(form.nbPersonne)}}
                <div class="form-error">
                    {{ form_errors(form.nbPersonne) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.prix)}}
                {{ form_widget(form.prix)}}
                <div class="form-error">
                    {{ form_errors(form.prix) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.time)}}
                {{ form_widget(form.time)}}
                <div class="form-error">
                    {{ form_errors(form.time) }}
                </div>
            </div>
            
            <div class="form-group">
                {{ form_label(form.difficulty)}}
                {{ form_widget(form.difficulty)}}
                <div class="form-error">
                    {{ form_errors(form.difficulty) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.description)}}
                {{ form_widget(form.description)}}
                <div class="form-error">
                    {{ form_errors(form.description) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.isFavorie)}}
                {{ form_widget(form.isFavorie)}}
                <div class="form-error">
                    {{ form_errors(form.isFavorie) }}
                </div>
            </div>
             <div class="form-group">
                {{ form_row(form.imageFile)}}
            </div>
            <div class="form-group">
                {{ form_label(form.ingredients)}}
                {{ form_widget(form.ingredients)}}
                <div class="form-error">
                    {{ form_errors(form.ingredients) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_row(form.submit)}}
            </div>
            
        {{ form_end(form) }}
    </div>
{% endblock %}